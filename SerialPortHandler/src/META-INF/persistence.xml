<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
    
	<persistence-unit name="SerialPortHandler" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
  		<properties>
			<property name = "javax.persistence.jdbc.driver" value = "org.apache.derby.jdbc.ClientDriver"/>
			<property name = "javax.persistence.jdbc.url" value = "jdbc:derby://localhost:1527/myeclipse"/>
			<property name = "javax.persistence.jdbc.user" value = "classiccars"/>
			<property name = "javax.persistence.jdbc.password" value = "myeclipse"/>
			<!-- <property name="eclipselink.ddl-generation" value="create-tables"/>
			<property name="eclipselink.create-ddl-jdbc-file-name" value="createDDL_ddlGeneration.jdbc"/>
            <property name="eclipselink.drop-ddl-jdbc-file-name" value="dropDDL_ddlGeneration.jdbc"/>
            <property name="eclipselink.ddl-generation.output-mode" value="both"/> -->
	  	</properties>
	</persistence-unit>
  
</persistence>
